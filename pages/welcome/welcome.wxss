.detail {
  width: 750 rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}

.header {
  margin: 100rpx auto 0;
}

.header .userinfo image{
  width: 200rpx;
  height: 200rpx;
}

.tips {
  font-size: 32rpx;
  color: blue;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 100rpx auto 0;
}

.btn {
  margin: 200rpx auto 0;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 25rpx;
  border: 1rpx solid black;
  border-radius: 10rpx;
}